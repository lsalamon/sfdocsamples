<Window x:Class="BuzzwordBingo.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Presenters="clr-namespace:BuzzwordBingo.Presenters"
    xmlns:Views="clr-namespace:BuzzwordBingo.Views" Icon="bingo.ico"
    Title="Buzzword Bingo" HorizontalAlignment="Left" VerticalAlignment="Top" SizeToContent="WidthAndHeight">
    <Window.Resources>
        <DataTemplate DataType="{x:Type Presenters:MainPresenter}">
            <Views:MainView/>
        </DataTemplate>

    </Window.Resources>
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
        <ContentControl Content="{Binding}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</Window>
