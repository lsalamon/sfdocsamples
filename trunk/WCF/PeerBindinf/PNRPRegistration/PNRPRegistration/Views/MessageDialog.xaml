<Window x:Class="PNRPRegistration.Views.MessageDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MessageDialog" HorizontalAlignment="Left" VerticalAlignment="Top" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" Background="#A5CEC81B" BorderBrush="#FFF20F0F" BorderThickness="0" WindowStyle="None" >
	<Window.Effect>
		<DropShadowEffect/>
	</Window.Effect>
    <StackPanel x:Name="LayoutRoot" HorizontalAlignment="Left" VerticalAlignment="Top">
        <TextBlock x:Name="textBlock" Text="{Binding Model.Title}" TextWrapping="Wrap" FontSize="18.667" FontWeight="Bold" Margin="5,0,5,5" Foreground="White"/>
        <TextBlock x:Name="textBlock1" Text="{Binding Model.Message}" TextWrapping="Wrap" Width="300" Foreground="White" FontSize="13.333" Margin="5,0"/>
        <Button x:Name="button" Width="75" Content="Ok" Margin="0,10" Click="button_Click"/>
    </StackPanel>
</Window>
