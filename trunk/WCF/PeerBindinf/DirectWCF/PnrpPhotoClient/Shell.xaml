<Window x:Class="WCFDirectClient.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Presenters="clr-namespace:WCFDirectClient.Presenters"
    xmlns:Views="clr-namespace:WCFDirectClient.Views"
    Title="WCF Direct Client" Background="#FF323232">
    <Window.Resources>
        <DataTemplate DataType="{x:Type Presenters:MainPresenter}">
            <Views:MainView/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ContentControl Content="{Binding}"/>
    </Grid>
</Window>
