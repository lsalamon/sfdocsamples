<Window x:Class="WCFDirectHost.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Presenters="clr-namespace:WCFDirectHost.Presenters"
    xmlns:Views="clr-namespace:WCFDirectHost.Views"
    Title="WCF Direct Host" Background="#CC323232"
    >
    <Window.Resources>
        <DataTemplate DataType="{x:Type Presenters:MainPresenter}">
            <Views:MainView/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ContentControl Content="{Binding}" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"/>
    </Grid>
</Window>
