<?xml version="1.0"?>
<configuration>
  <appSettings>
    <add key="CSSFriendly-JavaScript-Path" value="~/JavaScript"/>
  </appSettings>
  <system.web>
    <!-- Require XHTML strict output (see http://weblogs.asp.net/scottgu/archive/2005/09/03/424363.aspx) -->
    <xhtmlConformance mode="Strict"/>
    <!--
      To turn on debugging, use this...
      <compilation debug="true"/>
    -->
    <compilation debug="true" targetFramework="4.0"/>
    <authentication mode="Forms">
      <forms loginUrl="~/Membership/login.aspx"/>
    </authentication>
    <membership defaultProvider="FakeMembershipProvider">
      <providers>
        <add name="FakeMembershipProvider" type="CSSFriendly.FakeMembershipProvider"/>
      </providers>
    </membership>
    <siteMap>
      <providers>
        <add siteMapFile="example.sitemap" name="ExampleSiteMapProvider" type="System.Web.XmlSiteMapProvider, System.Web, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b03f5f7f11d50a3a"/>
        <add siteMapFile="whitePaperToc.sitemap" name="WhitePaperTocSiteMapProvider" type="System.Web.XmlSiteMapProvider, System.Web, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b03f5f7f11d50a3a"/>
      </providers>
    </siteMap>
    <httpHandlers>
      <add verb="GET,HEAD" path="*.vsi" type="System.Web.StaticFileHandler"/>
    </httpHandlers>
    <!--
      To test this site in a low-trust state, use this...
      <trust level="Low" originUrl="" />
      Turn off debugging in the <compilation> element above, too.
    -->
    <!--
      To attempt to elevate the trust of this site, use this...
      <trust level="Full" originUrl="" />
    -->
    <pages controlRenderingCompatibilityVersion="3.5" clientIDMode="AutoID"/>
  </system.web>
  <system.webServer>
    <handlers>
      <add name="*.vsi_GET,HEAD" path="*.vsi" verb="GET,HEAD" type="System.Web.StaticFileHandler" preCondition="integratedMode,runtimeVersionv2.0"/>
    </handlers>
    <validation validateIntegratedModeConfiguration="false"/>
  </system.webServer>
</configuration>