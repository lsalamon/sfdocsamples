<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <system.serviceModel>
        <bindings>
            <basicHttpBinding>
                <binding name="Basic">
                   <security mode="None">
                        <transport clientCredentialType="None" proxyCredentialType="None"
                            realm="" />
                        <message clientCredentialType="UserName" algorithmSuite="Default" />
                    </security>
                </binding>
                
            </basicHttpBinding>
            <wsHttpBinding>
                <binding name="ws">
                    <security mode="Message">
                        <message clientCredentialType="Windows" negotiateServiceCredential="true"
                            algorithmSuite="Default" />
                    </security>
                </binding>
             
                
                
            </wsHttpBinding>
        </bindings>
        <client>
            <endpoint address="http://localhost/SecureWcf/CoreSecurity.svc/basic"
                binding="basicHttpBinding" bindingConfiguration="Basic" contract="ServiceReference1.ICoreSecurity"
                name="Basic" />
            <endpoint address="http://localhost/SecureWcf/CoreSecurity.svc"
                binding="wsHttpBinding" bindingConfiguration="ws" contract="ServiceReference1.ICoreSecurity"
                name="ws">
                <identity>
                    <servicePrincipalName value="host/santana" />
                </identity>
            </endpoint>
   
        
        </client>
    </system.serviceModel>
</configuration>