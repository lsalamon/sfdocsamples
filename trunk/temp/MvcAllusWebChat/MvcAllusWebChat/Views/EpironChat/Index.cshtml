<h2>chat</h2>
<style>
    .ui-button-text-only .ui-button-text {
        padding: 0.3em 0.3em;
    }
</style>

<link href="~/Content/emoticons.css" rel="stylesheet" />
<!-- Busqueda-->
<div class="container">
    <div class="row">
        <div class="input-group" style="margin-top: 23px">
            <button id="btnOpenChat" type="submit" class="btn btn-primary btn-small" data-toggle="modal" data-keyboard="false" data-backdrop="static" data-target="#newModal">Iniciar chat on-line</button>
            <button id="btnOpenChat2" type="submit" class="btn btn-success btn-small"   >Test only btn</button>
        </div>
   </div>
</div>

<div class="container">
    <div class="row">
        <div class="span1">
            <!-- Chat Room  Dialog -->
            <div id="chatDialog" class="panel panel-success" style="display:none">
                <div class="panel-heading">
                    <h3 class="panel-title">Chat room</h3>
                </div>
                <div class="panel-body">
                    <div style=" border: 1px solid black">
                        <table>
                            <tr>
                                <td style="width: 380px;">
                                    <div id="txtMessageList" style="width: 680px; height: 400px; border:2px groove grey; background-color: #ffffcc;
                        font-size: 12px; overflow: auto;" />
                                </td>
                                <td valign="top" style="width: 280px;"></td>
                                
                            </tr>
                            <tr>
                                <td valign="middle" style="width: 280px;">

                                    <input id="txtMessage" type="text" class="form-control" style="width: 680px; height: 50px;" />
                                </td>
                                <td style="width: 180px;">
                                    <div class="btn-group" role="group">
                                        <button type="button" id="btnSendMessage" class="btn btn-info " style="margin-left: 5px;">Enviar</button>
                                        <button type="button" id="btnExitChat" class="btn btn-danger " style="margin-left: 5px;">Salir</button>
                                    </div>
                                    
                                </td>
                                <td></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <!-- Modal New -->
            <div id="newModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="Crear nuevo chat" aria-hidden="true">
                @Html.Partial("_CreateChatRoomView", new WebChat.Common.Models.ChatRoomCreationModel())
            </div>

        </div>
    </div>
</div>


@section scripts {
    <script src="~/Scripts/emoticons.js"></script>
    <script src="~/Scripts/epironchat/EpironChat.js"></script>
    @Scripts.Render("~/bundles/jqueryui");
}
